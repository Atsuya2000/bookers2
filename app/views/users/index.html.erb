<h1>User info</h1>
<%= attachment_image_tag current_user, :image %>
  <h5>name</h5>
  <%= current_user.name %>
  <h5>introduction</h5>
  <%= current_user.introduction %>
  <%= link_to edit_user_path(current_user), class: 'btn btn-default' do %>
    <i class="fas fa-user-cog"></i>
  <% end %>


<h1>New Book</h1>
<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<%if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h1>Users</h1>
<% @user.each do |user| %>
<div>
  <%= link_to user_path(user.id) do %>
    <%= attachment_image_tag user, :image, :fill, 60, 60, fallback: "no_image.png" %>
  <% end %>
  <p>nameï¼š<%= user.name %></p>
</div>
<%= link_to "show", user_path(user.id), class: 'btn btn-default' %>
<% end %>
