<%= flash[:notice] %>
<h2>Editing Book</h2>
<%= form_with model:@book, local:true do |f| %>
  <label for="inputName">Title</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"title"%>
  <label for="inputImage">Opinion</label>
  <%= f.text_field :opinion, autofocus: true, id:"inputOpinion", placeholder:"opinion"%>
  <%= f.submit "Update Book" %>
<%= link_to "show", books_path, class: 'btn btn-default' %>
<%= link_to "back", books_path, class: 'btn btn-default' %>
<% end %>

