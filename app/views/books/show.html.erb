<main>
  <div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, fallback: "no_image.png" %><table class="table">
  <tbody><tr></tr>
  <tr>
	  <th>name</th>
	  <th><%= @user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= @user.introduction %></th>
  </tr>
</tbody></table>

<div class="row">
  <%= link_to edit_user_path(@user), class: 'btn btn-default' do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>
<%if @book_new.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@book_new.errors.count, "error") %> prohibited this book from being saved:</h2>
   <ul>
     <% @book_new.errors.full_messages.each do |message| %>
       <li><%= message %></li>
     <% end %>
   </ul>
  </div>
<% end %>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book_new, local:true do |f| %>
  <div class="form-group">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <label for="book_opinion">Opinion</label>
    <%= f.text_area :body %>
  </div>
  <div class="form-group">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
  <tbody>
      <tr>
        <td>
          <%= link_to user_path(@book.user.id) do %>
            <%= attachment_image_tag @book.user, :profile_image, :fill, 30, 30, fallback: "no_image.png" %>
            <%= @book.user.name %>
          <% end %>
        </td>
        <td>
          <%= link_to book_path(@book.id) do %>
            <%= @book.title %>
          <% end %>
        </td>
        <td>
          <%=@book.body %>
        </td>
        <td>
          <% if current_user.id == @book.user.id %>
            <%= link_to "Edit", edit_book_path(@book.id), class: 'btn btn-default' %>
          <% end %>
        </td>
        <td>
          <% if current_user.id == @book.user.id %>
            <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
          <% end %>
        </td>
      </tr>
     </table>
    </div>
  </div>
</div>
</main>
