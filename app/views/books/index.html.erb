<%= flash[:notice] %>
<h1>User info</h1>
<%= attachment_image_tag current_user, :image %>
  <h5>name</h5>
  <%= current_user.name %>
  <h5>introduction</h5>
  <%= current_user.introduction %>
  <%= link_to edit_user_path(current_user), class: 'btn btn-default' do %>
    <i class="fas fa-user-cog"></i>
  <% end %>

<h1>New Book</h1>
<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<%if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
   <ul>
     <% @book.errors.full_messages.each do |message| %>
       <li><%= message %></li>
     <% end %>
   </ul>
  </div>
<% end %>


<h1>Book detail</h1>
<% @books.each do |book| %>
<div>
  <%= link_to book_path(book.id) do %>
    <%= attachment_image_tag book, :image %>
  <% end %>
  <p><%= @user.name %><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.png" %><p>
  <p>title：<%= book.user.name %></p>
  <p>opinion :<%= book.body %></p>
</div>
<%= link_to "edit", edit_book_path(book.id), class: 'btn btn-default' %>
<%= link_to "destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
<% end %>
